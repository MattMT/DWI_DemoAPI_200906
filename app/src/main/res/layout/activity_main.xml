<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etCodigoBarras"
        android:layout_marginTop="3dp"
        android:hint="Codigo de Barras"
        android:textAlignment="center"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etDescripcion"
        android:hint="Descripcion"
        android:layout_below="@+id/etCodigoBarras"
        android:layout_marginTop="3dp"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etMarca"
        android:hint="Marca"
        android:layout_below="@+id/etDescripcion"
        android:layout_marginTop="3dp"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPrecioCompra"
        android:hint="Precio de Compra"
        android:layout_below="@+id/etMarca"
        android:layout_marginTop="3dp"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPrecioVenta"
        android:hint="Precio de Venta"
        android:layout_below="@+id/etPrecioCompra"
        android:layout_marginTop="3dp"
        android:textAlignment="center"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etExistencias"
        android:hint="Exixtencias"
        android:layout_below="@+id/etPrecioVenta"
        android:layout_marginTop="3dp"
        android:textAlignment="center"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnBuscar"
        android:text="Buscar"
        android:layout_below="@+id/etExistencias"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGuardar"
        android:text="Guardar"
        android:layout_below="@+id/etExistencias"
        android:layout_toLeftOf="@+id/btnBuscar"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnActualizar"
        android:text="Actualizarar"
        android:layout_below="@+id/etExistencias"
        android:layout_toRightOf="@+id/btnBuscar"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEliminar"
        android:text="Eliminar"
        android:layout_below="@+id/btnBuscar"
        android:layout_centerHorizontal="true"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvProductos"
        android:layout_below="@id/btnEliminar"
        />

</RelativeLayout>